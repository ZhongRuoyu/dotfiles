" https://vimhelp.org/filetype.txt.html
filetype plugin indent on

" https://vimhelp.org/syntax.txt.html
syntax on

" https://vimhelp.org/options.txt.html
" display
set linebreak
set number
set ruler
set showcmd
set visualbell
" navigation
set scrolloff=5
set whichwrap=b,s,<,>,[,]
" indentation
" https://stackoverflow.com/q/1878974
set autoindent
set expandtab
set shiftwidth=2
set softtabstop=0
set tabstop=2
set smartindent
set smarttab
" editing
set backspace=indent,eol,start
set matchpairs+=<:>

